<section class="admin-trucks-index">

  <header class="page-header">
    <h1>Admin &raquo; All Trucks</h1>
  </header>

  <div class="well">
    <%= link_to '+ New Truck', [:new, :admin, :truck], class: 'btn btn-info' %>
  </div>

  <div class="panel panel-default trucks">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Type</th>
          <th>Year</th>
          <th>Capacity</th>
          <th>Reserved</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <%= render @trucks %>
      </tbody>
    </table>

  </div>

</section>
